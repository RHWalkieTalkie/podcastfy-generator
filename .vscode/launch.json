  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python Debugger: Flask",
      "justMyCode": false,
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
    }
  ]
}